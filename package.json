{
  "name": "test-desktop-app",
  "version": "0.0.1",
  "description": "Learning electron basis.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:mac:arm64": "electron-builder --mac --arm64 --publish never",
    "dist:mac:x64": "electron-builder --mac --x64 --publish never",
    "dist:linux:x64": "electron-builder --linux --x64 --publish never",
    "dist:linux:arm64": "electron-builder --linux --arm64 --publish never",
    "dist:win:x64": "electron-builder --win --x64 --publish never",
    "dist:win:arm64": "electron-builder --win --arm64 --publish never"
  },
  "build": {
    "appId": "com.electron.sample-app",
    "productName": "Electron Sample App",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "index.html",
      "services/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Sharmaz",
        "repo": "electron-sample-app"
      }
    ],
    "artifactName": "test-desktop-app-${version}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": ["dmg", "zip"]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "deb": {
      "artifactName": "test-desktop-app_${version}_${arch}.${ext}"
    },
    "rpm": {
      "artifactName": "test-desktop-app-${version}.${arch}.${ext}"
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [],
  "author": "Ivan Robles <contact@ivanrobles.pro>",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  }
}
